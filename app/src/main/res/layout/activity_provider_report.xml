<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProviderReportActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_sky"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/headerRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_icon_circle_blue"
                android:padding="6dp"
                android:src="@drawable/ic_back_arrow" />

            <TextView
                android:id="@+id/sectionTitle"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/inter_bold"
                android:text="Provider Report"
                android:textColor="@color/vivid_blue"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/instructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="70dp"
            android:fontFamily="@font/inter"
            android:text="Select a time window and preview what your provider will see"
            android:textColor="@color/dark_blue_text"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/headerRow"
            app:layout_constraintTop_toBottomOf="@id/headerRow" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/cardDateRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_lightblue_round"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="Report Time Window"
                    android:textColor="@color/vivid_blue"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="Must be between 3 and 6 months"
                    android:textColor="#6B7A90"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="From:"
                    android:textColor="#2D2D2D" />

                <EditText
                    android:layout_marginTop="8dp"
                    android:id="@+id/inputFromDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_white_bubble"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:fontFamily="@font/inter"
                    android:inputType="none"
                    android:padding="8dp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="To:"
                    android:textColor="#2D2D2D" />

                <EditText
                    android:layout_marginTop="8dp"
                    android:id="@+id/inputToDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_bubble"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:fontFamily="@font/inter"
                    android:inputType="none"
                    android:padding="8dp"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/cardToggles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_lightgray_round"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Include in Report"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/dark_blue_text"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:src="@drawable/ic_pef"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:tint="#00AEEF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily Symptoms"
                        android:layout_marginStart="12dp"
                        android:textSize="14sp"
                        android:textColor="#2D2D2D"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter"/>

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/toggleSymptoms"
                        android:layout_gravity="end"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:src="@drawable/ic_inhaler"
                        android:layout_width="28dp"
                        android:layout_height="28dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medicine Logs"
                        android:layout_marginStart="12dp"
                        android:textSize="14sp"
                        android:textColor="#2D2D2D"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter"/>

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/toggleMedicine"
                        android:layout_gravity="end"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:src="@drawable/ic_pef"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:tint="#00CD78" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PEF Trends"
                        android:layout_marginStart="12dp"
                        android:textSize="14sp"
                        android:textColor="#2D2D2D"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter"/>

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/togglePEF"
                        android:layout_gravity="end"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:src="@drawable/ic_warning"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:tint="#FF4747" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Triage Incidents"
                        android:layout_marginStart="12dp"
                        android:textSize="14sp"
                        android:textColor="#2D2D2D"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter"/>

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/toggleTriage"
                        android:layout_gravity="end"/>
                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btnGeneratePreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate Preview"
                android:textColor="@color/white"
                android:backgroundTint="@color/vivid_blue"
                android:padding="14dp"
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:id="@+id/previewContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <Button
                android:id="@+id/btnExportPdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Export PDF"
                android:textColor="@color/white"
                android:backgroundTint="@color/vivid_blue"
                android:padding="14dp"
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold"
                android:visibility="gone"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>