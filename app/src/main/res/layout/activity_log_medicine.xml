<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogMedicine">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/childHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_sky"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/headerRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp">

            <ImageView
                android:id="@+id/btnReturn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_icon_circle_blue"
                android:padding="6dp"
                android:src="@drawable/ic_back_arrow" />

            <TextView
                android:id="@+id/sectionTitle"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/inter_bold"
                android:text="Log Medicine"
                android:textColor="@color/vivid_blue"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/instructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="70dp"
            android:fontFamily="@font/inter"
            android:text="Track your medicine dose"
            android:textColor="@color/dark_blue_text"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/headerRow"
            app:layout_constraintTop_toBottomOf="@id/headerRow" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/medicineTypeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/childHeader">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnRescue"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            app:cardBackgroundColor="#FDD1B0"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/rescueButtonTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter"
                    android:lineSpacingExtra="8sp"
                    android:text="ðŸš¨\nRescue"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rescueButtonSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="For when breathing is hard"
                    android:textColor="#555"
                    android:textSize="14sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnController"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            app:cardBackgroundColor="#C9D9FD"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvButtonTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter"
                    android:lineSpacingExtra="8sp"
                    android:text="ðŸ’Š\nController"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvButtonSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="Daily medicine to stay healthy"
                    android:textColor="#555"
                    android:textSize="14sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <ScrollView
        android:id="@+id/sectionQuestions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/childHeader"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/txtBeforeSOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="How hard is it to breathe right now?"
                android:fontFamily="@font/inter"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/sobBeforeRatingCard"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_sob_rating_card"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                tools:layout_editor_absoluteY="257dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Very easy"
                            android:textSize="12sp" />

                        <Space
                            android:layout_width="140dp"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Super hard"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sobBeforeGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="8dp">

                        <TextView
                            android:id="@+id/sobBefore1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="18sp"
                            android:background="@drawable/sob_circle_selector" />

                        <TextView
                            android:id="@+id/sobBefore2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="2"
                            android:textSize="18sp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/sob_circle_selector" />

                        <TextView
                            android:id="@+id/sobBefore3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="3"
                            android:textSize="18sp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/sob_circle_selector" />

                        <TextView
                            android:id="@+id/sobBefore4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="4"
                            android:textSize="18sp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/sob_circle_selector" />

                        <TextView
                            android:id="@+id/sobBefore5"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="5"
                            android:textSize="18sp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/sob_circle_selector" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/numOfPuffsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter"
                android:text="How many puffs did you take?">

            </TextView>

            <LinearLayout
                android:id="@+id/puffCard"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_puff_card"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                tools:layout_editor_absoluteY="257dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:spacing="20dp">

                    <TextView
                        android:id="@+id/btnMinus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_circle_white"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="#9810fa"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/txtCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="24dp"
                        android:text="0"
                        android:textColor="#9810fa"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btnPlus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_circle_white"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="#9810fa"
                        android:textSize="24sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter"
                    android:text="puffs"
                    android:textColor="#4A4A4A"
                    android:textSize="14sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btnStartTechnique"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/vivid_blue"
                android:fontFamily="@font/inter"
                android:text="Start Technique Helper"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />


        <TextView
            android:id="@+id/txtAfterSOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="How hard is it to breathe after taking the dose?"
            android:fontFamily="@font/inter"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/sobAfterRatingCard"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_sob_rating_card"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            tools:layout_editor_absoluteY="257dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Very easy"
                            android:textSize="12sp" />

                        <Space
                            android:layout_width="140dp"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Super hard"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sobAfterGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="8dp">

                        <TextView
                            android:id="@+id/sobAfter1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="18sp"
                            android:background="@drawable/sob_circle_selector" />

                        <TextView
                            android:id="@+id/sobAfter2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="2"
                            android:textSize="18sp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/sob_circle_selector" />

                        <TextView
                            android:id="@+id/sobAfter3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="3"
                            android:textSize="18sp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/sob_circle_selector" />

                        <TextView
                            android:id="@+id/sobAfter4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="4"
                            android:textSize="18sp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/sob_circle_selector" />

                        <TextView
                            android:id="@+id/sobAfter5"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="5"
                            android:textSize="18sp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/sob_circle_selector" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txtPostCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter"
                android:text="How do you feel now?"/>

            <LinearLayout
                android:id="@+id/afterButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPostBetter"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="#040000"
                    app:backgroundTint="#4de78a"
                    app:cornerRadius="15dp"
                    android:textSize="12dp"
                    android:text="Better"/>

                <Space android:layout_width="10dp" android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnPostSame"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="#000000"
                    app:backgroundTint="#FDD774"
                    app:cornerRadius="15dp"
                    android:textSize="12dp"
                    android:text="Same"/>

                <Space android:layout_width="10dp" android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnPostWorse"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="#000000"
                    app:backgroundTint="#ff6b6b"
                    app:cornerRadius="15dp"
                    android:text="Worse"
                    android:textSize="12dp"/>
            </LinearLayout>


            <Button
                android:id="@+id/btnSave"
                android:layout_width="320dp"
                android:layout_height="55dp"
                android:enabled="false"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_bold"
                android:layout_gravity="center"
                app:cornerRadius="15dp"
                android:text="Save Log">
            </Button>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/menu_child_bottom_nav"
        app:itemIconTint="@color/bottom_nav_selector"
        app:itemTextColor="@color/bottom_nav_selector"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>