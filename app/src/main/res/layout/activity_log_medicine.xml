<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogMedicine">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/childHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_sky"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/headerRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp">

            <ImageView
                android:id="@+id/btnReturn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_icon_circle_blue"
                android:padding="6dp"
                android:src="@drawable/ic_back_arrow" />

            <TextView
                android:id="@+id/sectionTitle"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/inter_bold"
                android:text="Log Medicine"
                android:textColor="@color/vivid_blue"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/instructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="70dp"
            android:fontFamily="@font/inter"
            android:text="Track your medicine dose"
            android:textColor="@color/dark_blue_text"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/headerRow"
            app:layout_constraintTop_toBottomOf="@id/headerRow" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/childHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/pickInhalerTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:textColor="#242d3c"
                android:textSize="20sp"
                android:text="Pick inhaler type">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnRescue"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="#000000"
                    app:backgroundTint="#F59226"
                    app:cornerRadius="15dp"
                    tools:text="Rescue">
                </Button>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnController"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="Controller"
                    android:textColor="#000000"
                    app:backgroundTint="@color/vivid_blue"
                    app:cornerRadius="15dp">

                </Button>
            </LinearLayout>

            <TextView
                android:id="@+id/numOfPuffsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter"
                tools:text="How many puffs did you take?">

            </TextView>

            <LinearLayout
                android:id="@+id/puffCard"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_puff_card"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                tools:layout_editor_absoluteY="257dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:spacing="20dp">

                    <TextView
                        android:id="@+id/btnMinus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_circle_white"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="#9810fa"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/txtCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="24dp"
                        android:text="1"
                        android:textColor="#9810fa"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btnPlus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_circle_white"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="#9810fa"
                        android:textSize="24sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="puffs"
                    android:textColor="#4A4A4A"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtBefore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Before taking medicine:"
                android:fontFamily="@font/inter_bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtBeforeSOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Shortness of breath rating"
                android:fontFamily="@font/inter"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/sobBeforeGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="8dp">

                <include layout="@layout/sob_rating_circle" />
                <include layout="@layout/sob_rating_circle" />
                <include layout="@layout/sob_rating_circle" />
                <include layout="@layout/sob_rating_circle" />
                <include layout="@layout/sob_rating_circle" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtAfter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="After taking medicine:"
                android:fontFamily="@font/inter_bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtAfterSOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Shortness of breath rating"
                android:fontFamily="@font/inter"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/sobAfterGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="8dp">

                <include layout="@layout/sob_rating_circle" />
                <include layout="@layout/sob_rating_circle" />
                <include layout="@layout/sob_rating_circle" />
                <include layout="@layout/sob_rating_circle" />
                <include layout="@layout/sob_rating_circle" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtPostCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/inter"
                tools:text="Did the medicine help?"/>

            <LinearLayout
                android:id="@+id/afterButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPostBetter"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="#040000"
                    app:backgroundTint="#4de78a"
                    app:cornerRadius="15dp"
                    tools:text="Better"/>

                <Space android:layout_width="8dp" android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnPostSame"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="#000000"
                    app:backgroundTint="#FDD774"
                    app:cornerRadius="15dp"
                    tools:text="Same"/>

                <Space android:layout_width="8dp" android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnPostWorse"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textColor="#000000"
                    app:backgroundTint="#ff6b6b"
                    app:cornerRadius="15dp"
                    app:rippleColor="#ff0404"
                    tools:text="Worse"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clock"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="610dp">

            </ImageView>

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="151dp"
                android:fontFamily="@font/inter"
                tools:text="Taken at [time]"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:textColor="#7E7474"
                app:backgroundTint="#b4b4b4"
                app:cornerRadius="15dp"
                tools:text="Save Log">

            </Button>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/menu_child_bottom_nav"
        app:itemIconTint="@color/bottom_nav_selector"
        app:itemTextColor="@color/bottom_nav_selector"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>