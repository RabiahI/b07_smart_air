<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/childHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/header_sky"
    android:padding="16dp">

    <!-- Logo + title -->
    <LinearLayout
        android:id="@+id/logoRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iconRow"
        app:layout_constraintHorizontal_weight="1">

        <TextView
            android:id="@+id/tvAppTitle"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/baloo"
            android:text="SMART AIR"
            android:textColor="@color/vivid_blue"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>



    <!-- Welcome text -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/inter"
        android:text="Welcome back, Provider!"
        android:textColor="@color/dark_blue_text"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/logoRow"
        app:layout_constraintTop_toBottomOf="@id/logoRow" />

    \

</androidx.constraintlayout.widget.ConstraintLayout>
