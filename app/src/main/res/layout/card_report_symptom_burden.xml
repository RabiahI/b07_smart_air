<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="18dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtSymptomTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symptom Burden"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold"
            android:textColor="#233647" />

        <TextView
            android:id="@+id/txtSymptomSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Distribution of symptom days"
            android:textSize="12sp"
            android:fontFamily="@font/inter"
            android:textColor="#6B7A90" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chartSymptomBurden"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
