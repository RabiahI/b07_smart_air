<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_sky"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/headerRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/sectionTitle"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter_bold"
                android:text="History"
                android:textColor="@color/vivid_blue"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/instructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="65dp"
            android:fontFamily="@font/inter"
            android:text="See all medicine logs and daily check-ins"
            android:textColor="@color/dark_blue_text"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/headerRow"
            app:layout_constraintTop_toBottomOf="@id/headerRow" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <TextView
            android:id="@+id/txtChooseType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "What do you want to see?"
            android:layout_marginBottom="20dp"
            android:textSize="20dp"
            android:textAlignment="center"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMedicineLogs"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:strokeColor="#A269FF"
            app:strokeWidth="2dp"
            android:backgroundTint="#F3E9FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="ðŸ’Š"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:backgroundTint="#A269FF"
                    android:background="@drawable/bg_rounded_icon_white"
                    android:padding="10dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medicine Logs"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#202020" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See when you took your medicine"
                        android:textSize="13sp"
                        android:textColor="#555555" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSymptomLogs"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="20dp"
            app:strokeColor="#96C9FF"
            app:strokeWidth="2dp"
            android:backgroundTint="#E3F4FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="ðŸ“"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:backgroundTint="#96C9FF"
                    android:background="@drawable/bg_rounded_icon_white"
                    android:padding="10dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily Check-ins"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#202020" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your daily symptoms and triggers"
                        android:textSize="13sp"
                        android:textColor="#555555" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPefLogs"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="20dp"
            app:strokeColor="#00CD78"
            app:strokeWidth="2dp"
            android:backgroundTint="#E5FFE9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_rounded_icon_white"
                    android:backgroundTint="#00CD78"
                    android:padding="10dp"
                    android:text="ðŸ“Š"
                    android:textSize="20dp"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PEF Entries"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#202020" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your peak flow measurements"
                        android:textSize="13sp"
                        android:textColor="#555555" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/bottom_nav_selector"
        app:itemTextColor="@color/bottom_nav_selector"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/menu_child_bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>