<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/adherenceCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_box"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Header -->
        <TextView
            android:id="@+id/adherenceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controller Adherence"
            android:textSize="20sp"
            android:textColor="#4b629f"
            android:fontFamily="@font/roca_two_bold"
            android:paddingBottom="16dp"/>

        <!-- Main Stats Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Adherence Percentage -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/adherencePeriodLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last 30 Days"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/adherencePercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="83%"
                        android:textSize="48sp"
                        android:textColor="#4b629f"
                        android:fontFamily="@font/roca_two_bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" adherence"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/adherenceProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="16dp"
            android:progress="83"
            android:max="100"
            android:progressTint="#4CAF50"
            android:progressBackgroundTint="#E0E0E0"/>

        <!-- Additional Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/dosesTakenCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:textSize="24sp"
                    android:textColor="#4b629f"
                    android:fontFamily="@font/roca_two_bold"/>

                <TextView
                    android:id="@+id/dosesTakenLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doses Taken"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E0E0E0"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/dosesMissedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="24sp"
                    android:textColor="#4b629f"
                    android:fontFamily="@font/roca_two_bold"/>

                <TextView
                    android:id="@+id/dosesMissedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days Missed"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E0E0E0"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/daysTaken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roca_two_bold"
                    android:text="7"
                    android:textColor="#4b629f"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/currentStreakLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days Taken"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>