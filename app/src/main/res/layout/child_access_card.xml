<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Child Name -->
        <TextView
            android:id="@+id/textViewChildName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2C3E50" />


        <!-- Access Status Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp">
            <!-- Icon to Represent Status -->
            <ImageView
                android:id="@+id/iconAccessStatus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_lock_outline"
                android:layout_marginStart="2dp" />

            <TextView
                android:id="@+id/textViewAccessStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="Access: Not Shared"
                android:textColor="#757575"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonInviteProvider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invite Provider"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:backgroundTint="#43A047"
                android:textColor="@android:color/white"
                android:paddingHorizontal="16dp" />

        </LinearLayout>

        <!-- Invite Code Row (visible only when code exists) -->
        <LinearLayout
            android:id="@+id/layoutInviteCode"
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            android:visibility="gone">

            <TextView
                android:id="@+id/textViewInviteCodeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="Code:"
                android:textColor="#607D8B"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewInviteCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="••••••"
                android:textColor="#000"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/buttonToggleCodeVisibility"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Toggle Code Visibility"
                android:src="@drawable/ic_visibility_off" />

            <Button
                android:id="@+id/buttonRevokeAccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:backgroundTint="#FFFF"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="Revoke Access"
                android:textAllCaps="false"
                android:textColor="#A00303"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

