<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:background="@drawable/rounded_box"
        android:orientation="vertical"
        android:padding="13dp">

        <TextView
            android:id="@+id/triageContainerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roca_two_bold"
            android:text="Recent Symptoms"
            android:textColor="#4b629f"
            android:textSize="18sp"
            android:layout_marginBottom="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/nightWakingSymptomContainer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="13dp"
                android:background="@drawable/rounded_box"
                android:orientation="vertical"
                android:padding="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Night Waking"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="20dp"
                    android:textColor="#4b629f"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#b4b4b4"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wheezingSymptomContainer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_box"
                android:orientation="vertical"
                android:padding="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wheezing"
                    android:paddingTop="20dp"
                    android:textColor="#4b629f"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#b4b4b4"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="13dp"
            android:gravity="center_horizontal">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/triggersTagContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/triggerExercise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exercise"
                        android:textColor="#4b629f"
                        android:textSize="12sp"
                        android:background="@drawable/tag_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:id="@+id/triggerColdAir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cold Air"
                        android:textColor="#4b629f"
                        android:textSize="12sp"
                        android:background="@drawable/tag_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:id="@+id/triggerDust"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dust"
                        android:textColor="#4b629f"
                        android:textSize="12sp"
                        android:background="@drawable/tag_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:id="@+id/triggerPet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pets"
                        android:textColor="#4b629f"
                        android:textSize="12sp"
                        android:background="@drawable/tag_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:id="@+id/triggerSmoke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smoke"
                        android:textColor="#4b629f"
                        android:textSize="12sp"
                        android:background="@drawable/tag_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:id="@+id/triggerIllness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Illness"
                        android:textColor="#4b629f"
                        android:textSize="12sp"
                        android:background="@drawable/tag_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:id="@+id/triggerStrongOdor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Strong odors"
                        android:textColor="#4b629f"
                        android:textSize="12sp"
                        android:background="@drawable/tag_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_marginEnd="6dp"/>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

        <Button
            android:id="@+id/viewAllSymptomsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:text="View All"
            android:textSize="14sp"
            android:backgroundTint="#4b629f"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>