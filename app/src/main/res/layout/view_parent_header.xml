<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/childHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/header_sky"
    android:padding="16dp">

    <!-- Logo + title -->
    <LinearLayout
        android:id="@+id/logoRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iconRow"
        app:layout_constraintHorizontal_weight="1">

        <TextView
            android:id="@+id/tvAppTitle"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/baloo"
            android:text="SMART AIR"
            android:textColor="@color/vivid_blue"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Icons on the right -->
    <LinearLayout
        android:id="@+id/iconRow"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@+id/logoRow"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnNotifications"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="15dp"
            android:padding="6dp"
            android:background="@drawable/bg_icon_circle_blue"
            android:src="@drawable/ic_bell"/>

        <ImageView
            android:id="@+id/btnProfile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="8dp"
            android:padding="6dp"
            android:background="@drawable/bg_icon_circle_blue"
            android:src="@drawable/ic_profile"/>
    </LinearLayout>
    
    <!-- Welcome text -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/inter"
        android:text="Welcome back, Parent Name!"
        android:textColor="@color/dark_blue_text"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/logoRow"
        app:layout_constraintTop_toBottomOf="@id/logoRow" />

    <!-- Dropdown menu -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="290dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/tvWelcome"
        app:layout_constraintTop_toTopOf="@id/tvWelcome"
        app:layout_constraintBottom_toBottomOf="@id/tvWelcome"
        android:id="@+id/Dropdown"
        android:hint="Child 1">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/child"
            android:inputType="none"
            app:simpleItems="@array/child_options"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Date -->
    <TextView
        android:id="@+id/tvTodayDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins"
        android:text="Todayâ€™s date"
        android:textColor="@color/dark_blue_text"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="@id/tvWelcome"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

</androidx.constraintlayout.widget.ConstraintLayout>
