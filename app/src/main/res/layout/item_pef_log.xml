<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="false"
    app:strokeWidth="0dp"
    app:strokeColor="@android:color/transparent"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    android:id="@+id/cardPef">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:background="@drawable/bg_pef_green"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPefIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src= "@drawable/ic_pef"
            android:backgroundTint="#00CD78"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_rounded_icon_white"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPefDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nov 29, 2025"
                android:textColor="#2D2D2D"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtPefTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="8:15 AM"
                android:textColor="#5A5A5A"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/layoutPefTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tagZone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_chip_green"
                    android:padding="8dp"
                    android:text="Green Zone"
                    android:textColor="#2D7A3F"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tagStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="Great! âœ“"
                    android:textColor="#2D7A3F"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/txtPefValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="280"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#2D2D2D"/>

            <TextView
                android:id="@+id/txtPefUnits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L/min"
                android:textSize="12sp"
                android:textColor="#5A5A5A"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
